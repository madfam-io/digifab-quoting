# Root environment variables for docker-compose and development

# Environment
NODE_ENV=development

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=madfam_quoting
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/madfam_quoting?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis-password

# JWT & Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXTAUTH_URL=http://localhost:3002

# AWS
AWS_REGION=us-east-1
S3_BUCKET=madfam-quoting-dev
S3_REGION=us-east-1
KMS_KEY_ID=

# SQS
SQS_QUEUE_URL=

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email
EMAIL_FROM=innovacionesmadfam@proton.me
SES_REGION=us-east-1

# Defaults
DEFAULT_CURRENCY=MXN
DEFAULT_LOCALE=es
QUOTE_VALIDITY_DAYS=14

# FX Provider
FX_PROVIDER=openexchangerates
FX_API_KEY=

# Worker
GEOMETRY_SERVICE_URL=http://localhost:8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:4000

# Domains
API_DOMAIN=api.cotiza.studio
WEB_DOMAIN=cotiza.studio

# Company
COMPANY_EMAIL=innovacionesmadfam@proton.me
COMPANY_DOMAIN=madfam.io

# Local Development
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566

# Feature Flags
FEATURE_SUPPLIER_PORTAL=false
FEATURE_QUOTE_COMPARISON=false
FEATURE_ADVANCED_DFM=false