# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/madfam_quoting?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT & Auth
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ACCESS_TOKEN_EXPIRY="15m"
JWT_REFRESH_TOKEN_EXPIRY="7d"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# AWS
AWS_REGION="us-east-1"
S3_BUCKET="madfam-quoting-dev"
S3_REGION="us-east-1"
KMS_KEY_ID=""

# SQS
SQS_QUEUE_URL=""

# Stripe
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Email
EMAIL_FROM="noreply@madfam.app"
SES_REGION="us-east-1"

# Defaults
DEFAULT_CURRENCY="MXN"
DEFAULT_LOCALE="es"
QUOTE_VALIDITY_DAYS="14"

# FX Provider
FX_PROVIDER="openexchangerates"
FX_API_KEY=""

# Worker
GEOMETRY_SERVICE_URL="http://localhost:8000"

# Frontend
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Local Development
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT="http://localhost:4566"

# Feature Flags
FEATURE_SUPPLIER_PORTAL=false
FEATURE_QUOTE_COMPARISON=false
FEATURE_ADVANCED_DFM=false