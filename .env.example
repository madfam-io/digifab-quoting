# Root environment variables for docker-compose and development

# Environment
NODE_ENV=development

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cotiza_quoting
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cotiza_quoting?schema=public

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis-password

# JWT & Auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXTAUTH_URL=http://localhost:3030

# AWS
AWS_REGION=us-east-1
S3_BUCKET=cotiza-quoting-dev
S3_REGION=us-east-1
KMS_KEY_ID=

# SQS
SQS_QUEUE_URL=

# Stripe (Legacy/Fallback)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Janua Multi-Provider Billing
# Routes to Conekta (MX) or Polar (international) based on country
JANUA_BILLING_ENABLED=true
JANUA_API_URL=http://janua-api:8001
JANUA_API_KEY=your-janua-api-key
JANUA_WEBHOOK_SECRET=your-janua-webhook-secret

# Email
EMAIL_FROM=innovacionescotiza@proton.me
SES_REGION=us-east-1

# Defaults
DEFAULT_CURRENCY=MXN
DEFAULT_LOCALE=es
QUOTE_VALIDITY_DAYS=14

# FX Provider
FX_PROVIDER=openexchangerates
FX_API_KEY=

# Worker
GEOMETRY_SERVICE_URL=http://localhost:8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8200/api/v1

# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3030,http://localhost:8200

# Domains
API_DOMAIN=api.cotiza.studio
WEB_DOMAIN=cotiza.studio

# Company
COMPANY_EMAIL=innovacionescotiza@proton.me
COMPANY_DOMAIN=cotiza.io

# Local Development
USE_LOCALSTACK=true
LOCALSTACK_ENDPOINT=http://localhost:4566

# Feature Flags
FEATURE_SUPPLIER_PORTAL=false
FEATURE_QUOTE_COMPARISON=false
FEATURE_ADVANCED_DFM=false
