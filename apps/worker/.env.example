# FastAPI Worker Configuration
PORT=8000
WORKERS=4
LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/madfam_quoting

# Redis Queue
REDIS_URL=redis://localhost:6379
QUEUE_NAME=geometry-analysis

# S3 Configuration
AWS_REGION=us-east-1
S3_BUCKET=madfam-quoting-uploads
S3_ACCESS_KEY_ID=your-aws-access-key
S3_SECRET_ACCESS_KEY=your-aws-secret-key

# Analysis Settings
MAX_FILE_SIZE_MB=100
ANALYSIS_TIMEOUT_SECONDS=120

# Geometry Analysis Libraries (when implemented)
OPENCASCADE_PATH=/usr/local/lib/opencascade
FREECAD_PATH=/usr/bin/freecad

# Performance
MAX_CONCURRENT_ANALYSES=10
MEMORY_LIMIT_MB=2048

# Feature Flags
ENABLE_MESH_REPAIR=true
ENABLE_WALL_THICKNESS_CHECK=true
ENABLE_SUPPORT_DETECTION=true
ENABLE_TOOLPATH_SIMULATION=false